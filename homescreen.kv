#: import utils kivy.utils
<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: "backgroundd.png"

        Image:
            source: "logoo.png"
            size_hint: (.4, .5)
            pos_hint: {"center_x": .5, "center_y": .85}

        Label:
            text: "SMART WATER METER"
            pos_hint: {"center_x": .5, "center_y": .72}
            halign: "center"
            font_style: "Caption"
        Label:
            text: "IOT Water Meter"
            pos_hint: {"center_x": .5, "center_y": .69}
            halign: "center"
            font_style: "Caption"






        Label:
            pos_hint: {"center_x": 0.40, "center_y": 0.5}
            size_hint: 1, .1
            font_size: 15
            text: "Liters per Minute:  "
        Label:
            id: Lminutes
            pos_hint: {"center_x": 0.70, "center_y": 0.5}
            size_hint: 1, .1
            text: ""



        Label:
            pos_hint: {"center_x": 0.40, "center_y": 0.4}
            size_hint: 1, .1
            font_size: 15
            text: "Total ML Consumption:  "
        Label:
            id: ml_consumption
            pos_hint: {"center_x": 0.70, "center_y": 0.4}
            size_hint: 1, .1
            text: " "



        Button:
            pos_hint: {"center_x": 0.8, "center_y": 0.2}
            size_hint: None, None
            size: "100dp" , "50dp"
            text: "History"
            id: okbutton
            on_release:
                app.change_screen("setting_screen")

        Button:
            pos_hint: {"center_x": 0.2, "center_y": 0.2}
            size_hint: None, None
            size: "100dp" , "50dp"
            text: "Graph"
            id: history1
            on_press: app.view_graph()

        Label:
            id: printni
            pos_hint: {"center_x": 0.1, "center_y": 0.1}
            size_hint: 1, .1
            text: " "


